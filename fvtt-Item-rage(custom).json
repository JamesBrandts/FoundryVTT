          "command": "const lastArg = args[args.length-1];\nconst targetToken = await fromUuid(lastArg.tokenUuid);\nif(args[0] === \"each\"){\n    if (targetToken.actor.data.data.attributes.hp.value >= targetToken.actor.data.data.attributes.hp.max/2)return;\n    //to remove the dialog, delete from here\n    let confirmation = await Dialog.confirm({\n        title: 'Rage',\n        content: `<p>Use Rage?</p>`,\n    });\n    if(!confirmation)return;\n    //to here\n    targetToken.actor.items.getName(\"Rage\").roll();\n}",
